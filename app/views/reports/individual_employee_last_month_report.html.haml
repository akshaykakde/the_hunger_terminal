.container
  %h3.text-center #{@orders.name}
  .table-responsive
    %table.table-hover.table-bordered{:align => 'center'}
      %tbody
        %tr
          %th.text-center Sr No.
          %th.text-center Order Date
          %th.text-center Order Details
          %th.text-center TotalOrderPrice 
          %th.text-center Subsidy
          %th.text-center CTE


        - @orders.each_with_index do |order,i|
          %tr  
          %td.text-center= i+1 
          %td.text-center= order.created_at
          %td.text-center= link_to 'See Order Details', reports_order_details_path(order_id: order.id), remote: true
          %td.text-center= "₹ #{order.total_cost}"
          %td.text-center= "₹ #{order.discount}"
          %td.text-center= "₹ #{order.total_cost - order.discount}"
#order_details.modal.fade{"aria-labelledby" => "Order Details", :role => "dialog", :tabindex => "-1"}