.container.center
  %h3.text-center Vendors Current Details
  %center
    %table.table-hover.table-bordered.terminals_running_balance_table
      %tbody
        %tr
          %th.text-center #
          %th.text-center Name
          %th.text-center Current Amount 
          %th.text-center Payment Made
          %th.text-center Payable
          %th.text-center Pay
        - @terminals.each_with_index do |terminal,i|
          %tr
          %td.text-center= i+1
          %td.text-center= terminal.name
          %td.text-center= terminal.current_amount
          %td.text-center= terminal.payment_made
          %td.text-center= terminal.payable
          %td.text-center= link_to "pay", admin_dashboard_pay_path(:terminal_id => terminal.id), remote: true 
#payment.modal.fade{"aria-labelledby" => "Payment", :role => "dialog", :tabindex => "-1"}